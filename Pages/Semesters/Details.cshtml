@page
@model nscccoursemap_nhoxben335.Pages.Semesters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.AcademicYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.AcademicYear.Title)
        </dd>
        <dt class="col-sm-2">
            Course Offerings
        </dt>
        <dd class="col-sm-10">
           @foreach(var item in Model.CourseOfferings){
               @Html.Raw(
                item.DiplomaYearSection.DiplomaYear.Diploma.Title + " - " +
                item.Course.CourseCode+ " - " + 
                item.DiplomaYearSection.Title + " - " +
                item.DiplomaYearSection.DiplomaYear.Title + " - " +
                item.Instructor.FirstName + " " + item.Instructor.LastName + " - " +
                item.Course.Title + " - " +
                "Directed Elective: " + item.IsDirectedElective
               )<br/>;
           }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Semester.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
