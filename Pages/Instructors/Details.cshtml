@page
@model nscccoursemap_nhoxben335.Pages.Instructors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>
        <dt class="col-sm-2">
           Advising Assignments
        </dt>
        <dd class="col-sm-10">
            @foreach(var item in Model.AdvisingAssignments){
                @Html.Raw(
                    item.DiplomaYearSection.DiplomaYear.Diploma.Title + " - " +
                    item.DiplomaYearSection.DiplomaYear.Title + " - " +
                    item.DiplomaYearSection.Title + " - " +
                    item.Instructor.FirstName + " " +
                    item.Instructor.LastName + " - " +
                    item.DiplomaYearSection.AcademicYear.Title
                )<br/>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Instructor.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
