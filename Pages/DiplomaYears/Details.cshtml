@page
@model nscccoursemap_nhoxben335.Pages.DiplomaYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Diploma Year</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiplomaYear.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaYear.Diploma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiplomaYear.Diploma.Title)
        </dd>
        <dt class="col-sm-2">
           Course Offerings
        </dt>
        <dd class="col-sm-10">
            @{ var semesterName = ""; }
            @foreach(var courseOffering in Model.CourseOfferings){
                @if(courseOffering.Semester.Name != semesterName){
                    @Html.Raw("<h4>"+courseOffering.Semester.Name+"</h4>")
                    semesterName = courseOffering.Semester.Name;
                }
                
                @Html.Raw(
                    courseOffering.Course.CourseCode+" - "+ 
                    courseOffering.Course.Title + " - "+ 
                    courseOffering.Instructor.FirstName + " "+
                    courseOffering.Instructor.LastName+ " - "+
                    "Directed Elective: " + courseOffering.IsDirectedElective)<br/>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DiplomaYear.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
