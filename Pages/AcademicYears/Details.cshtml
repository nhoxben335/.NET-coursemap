@page
@model nscccoursemap_nhoxben335.Pages.AcademicYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AcademicYear</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear.Title)
        </dd>
        <dt class="col-sm-2">
            Semesters
        </dt>
        <dd class="col-sm-10">
            @foreach(var item in Model.Semesters){
                @Html.Raw(item)<br/>
            }
        </dd>
        <dt class="col-sm-2">
            Advising Assignments
        </dt>
        <dd class="col-sm-10">
            @foreach(var item in Model.AdvisingAssignment){
                @Html.Raw(
                item.DiplomaYear.Diploma.Title + " - " + 
                item.DiplomaYear.Title + " - " + 
                item.AdvisingAssignment.Instructor.FirstName + " " + 
                item.AdvisingAssignment.Instructor.LastName 
                )<br/>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AcademicYear.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
